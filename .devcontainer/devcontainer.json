{
  "name": "Arc Dev",
  "dockerComposeFile": ["../infra/compose.yml", "compose.override.yml"],
  "service": "dev",
  "workspaceFolder": "/workspaces/arc",
  "shutdownAction": "stopCompose",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/go:1": { "version": "1.25" },
    "ghcr.io/devcontainers/features/node:1": { "version": "22" }
  },
  "postCreateCommand": "bash tools/scripts/devcontainer-postcreate.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "dart-code.dart-code",
        "dart-code.flutter",
        "editorconfig.editorconfig",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "timonwong.shellcheck"
      ]
    }
  }
}
